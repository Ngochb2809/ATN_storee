    <h1 style="color: ;green">Edit Toy</h1>
    <form class="card p-3 bg-light text-center mt-3 mb-3" action="/edit" method="post">
    <input type="hidden" name="id" value="{{toy._id}}">
            <div class="form-group">
                <label class="h3 text-secondary">Name</label> <input type="text" name="txtName" value="{{toy.name}}" class="form-control" required><label style="color: red;">{{results.nameError}}</label></div>
